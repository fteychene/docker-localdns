pkgname=docker-localdns
_pkgname=docker-localdns
pkgver=${PKGVER:-autogenerated}
pkgrel=${PKGREL:-1}
pkgdesc="Local DNS server exposing Docker containers"
arch=('i686' 'x86_64')
license=('')
depends=(
)
makedepends=(
	'go'
  'dep'
	'git'
)

source=(
	"$_pkgname::git://github.com/fteychene/docker-localdns#branch=${BRANCH:-master}"
	"docker-localdns.service"
)

md5sums=(
	'SKIP'
	'22dd5f8e97a675e77023e5d3f6cf9e42'
)

backup=(
)

pkgver() {
	if [[ "$PKGVER" ]]; then
		echo "$PKGVER"
		return
	fi

	cd "$srcdir/$_pkgname"
	local date=$(git log -1 --format="%cd" --date=short | sed s/-//g)
	local count=$(git rev-list --count HEAD)
	local commit=$(git rev-parse --short HEAD)
	echo "$date.${count}_$commit"
}

build() {
	cd "$srcdir/$_pkgname"
  make build
}
 
package() {
	find "$srcdir/$_pkgname/bin/" -type f -executable | while read filename; do
		install -DT "$filename" "$pkgdir/usr/bin/$(basename $filename)"
	done
	install -DT -m0755 "$srcdir/docker-localdns.service" "$pkgdir/usr/lib/systemd/system/docker-localdns.service"
}
